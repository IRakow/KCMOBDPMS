# Application Settings
APP_NAME="Property Management System"
APP_VERSION="1.0.0"
DEBUG=False

# API Settings
API_V1_STR="/api/v1"

# Database Configuration
POSTGRES_USER=property_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=property_management
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Security
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Email Configuration (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=noreply@propertymanagement.com
EMAILS_FROM_NAME="Property Management System"

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".jpg",".jpeg",".png",".doc",".docx"]

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=property-management-files

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio Configuration (Optional - for SMS)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# Sentry Configuration (Optional - for error tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Environment
ENVIRONMENT=development  # development, staging, production